    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>OCR Suite Admin Console</title>
    <link rel="stylesheet" href="@Url.Content("~/css/admin.css")" />
</head>
<body>
    <div id="app-root">
        <div class="app-shell">
            <aside class="sidebar">
                <h1>OCR Suite Admin</h1>
